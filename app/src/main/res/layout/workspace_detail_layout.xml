<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginBottom="@dimen/_30sdp"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_230sdp"
        android:clickable="true"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:fitsSystemWindows="true"
        android:background="@drawable/dashboard_bg"
        android:longClickable="false"
        android:animationCache="true"
        android:duplicateParentState="true"
        android:filterTouchesWhenObscured="true"
        >
        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsingToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="false"
            app:contentScrim="@color/accent"
            app:expandedTitleTextAppearance="@android:color/transparent"
            app:layout_scrollFlags="scroll|enterAlways|enterAlwaysCollapsed"
            app:scrimAnimationDuration="200"
            app:statusBarScrim="?attr/colorPrimaryDark" >

                <!--Page Image Profile-->

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/layout_Image"
                    >


                    <androidx.viewpager.widget.ViewPager
                        android:id="@+id/view_pager2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/bg_gradient"/>



                    <me.relex.circleindicator.CircleIndicator
                        android:id="@+id/indicator"
                        android:background="@null"
                        android:layout_below="@id/view_pager2"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginTop="-50dp"
                       />

                    <FrameLayout
                        android:translationZ="9dp"
                        android:layout_width="31dp"
                        android:layout_height="31dp"
                        android:foregroundGravity="center_horizontal"
                        android:layout_marginStart="11dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:id="@+id/back"
                        android:clickable="true"
                        android:layout_marginEnd="11dp"
                        android:layout_marginTop="@dimen/_25sdp"
                        android:foreground="@drawable/custom_ripple"
                        android:backgroundTint="#ffffff"
                        android:background="@drawable/circlegradient">
                        <ImageView
                            android:layout_marginStart="-1dp"
                            android:id="@+id/ImageBack"
                            android:layout_gravity="center"
                            android:layout_width="11dp"
                            android:layout_height="11dp"
                            android:src="@drawable/icon_back_vector"
                            android:gravity="center" />
                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_alignParentBottom="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/RoomName"
                android:textColor="@color/white"
                android:text="Paris"
                android:textStyle="bold"
                android:textSize="@dimen/_12sdp"

                />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/RoomDispriction"
                            android:textColor="@color/white"
                            android:text="Room Detail"
                            android:textSize="@dimen/_10sdp"
                            android:layout_marginBottom="@dimen/_35sdp"
                            />



                    </LinearLayout>
            </RelativeLayout>



        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>


    <RelativeLayout
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-20dp"
        >

        <View
            android:layout_alignParentBottom="true"
            android:background="@drawable/rounded_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"

            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:nestedScrollingEnabled="true">
    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:id="@+id/mainLayout"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Start Time"
                android:textSize="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_10sdp"
                />

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/TimeSlot"
                android:layout_marginTop="@dimen/_5sdp"

                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Meeting Duration"
                android:textSize="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_10sdp"
                />

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/TimeDuration"
                android:layout_margin="@dimen/_5sdp"

                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date"
                android:textSize="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_10sdp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="23 Jun 2021"
                android:drawableRight="@drawable/ic_calendar"
                android:textColor="@color/black"
                android:drawableTint="@color/black"
                android:id="@+id/selectedDate"
                android:textSize="@dimen/_15sdp"

                />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:theme="@style/TextLabel_meeting">
                <EditText
                    android:id="@+id/edt_Meeting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="-4dp"
                    android:layout_marginEnd="-4dp"
                    android:hint="Meeting Agenda"
                    android:inputType="text"
                    android:maxLength="50"
                    android:maxLines="1"
                    android:textSize="16sp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:theme="@style/DefaultEditText_meeting" />

            </com.google.android.material.textfield.TextInputLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Capacity : 10 max"
                android:textSize="@dimen/_8sdp"
                android:id="@+id/capacity"
                android:layout_gravity="right"
                android:gravity="right"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Add Participants"
                        android:textAllCaps="false"
                        android:layout_margin="@dimen/_5sdp"
                        android:paddingTop="@dimen/_5sdp"
                        android:paddingBottom="@dimen/_5sdp"
                        android:paddingStart="@dimen/_10sdp"
                        android:paddingEnd="@dimen/_10sdp"
                        android:drawableRight="@drawable/ic_baseline_add_24"
                        android:textColor="@color/white"
                        android:drawableTint="@color/white"
                        android:drawablePadding="@dimen/_5sdp"
                        android:background="@drawable/btn_bg"
                        android:id="@+id/AddEmployee"/>



                </LinearLayout>



                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="@dimen/_15sdp"
                        android:textColor="@color/black"
                        android:layout_gravity="center"
                        android:drawablePadding="@dimen/_5sdp"
                        android:gravity="center"
                        android:visibility="invisible"
                        android:id="@+id/TotalSelectedEmp"
                        android:drawableRight="@drawable/ic_arrow"
                        android:drawableTint="@color/black"
                        android:text="Total 5 select"
                        android:drawableLeft="@drawable/ic_group"/>

                </LinearLayout>


                </LinearLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:nestedScrollingEnabled="true"
            android:id="@+id/AddGuestListview"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Add Guest"
                        android:drawableTint="@color/white"
                        android:layout_margin="@dimen/_5sdp"
                        android:textColor="@color/white"
                        android:textAllCaps="false"
                        android:paddingTop="@dimen/_5sdp"
                        android:paddingBottom="@dimen/_5sdp"
                        android:paddingStart="@dimen/_10sdp"
                        android:paddingEnd="@dimen/_10sdp"
                        android:drawableRight="@drawable/ic_baseline_add_24"
                        android:drawablePadding="@dimen/_5sdp"
                        android:background="@drawable/btn_bg"
                        android:id="@+id/AddGuest"/>



                </LinearLayout>



                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1">



                </LinearLayout>


            </LinearLayout>





        </LinearLayout>



        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BOOK NOW"
            android:id="@+id/booking"
            android:paddingStart="@dimen/_20sdp"
            android:paddingEnd="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_margin="@dimen/_10sdp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/bg_book_btn"
            android:layout_below="@id/mainLayout"/>

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:indeterminateTint="@color/white"
            android:layout_marginTop="@dimen/_50sdp"
            android:visibility="gone" />


    </RelativeLayout>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </RelativeLayout>


    <!--    </com.liaoinstan.springview.widget.SpringView>-->
</androidx.coordinatorlayout.widget.CoordinatorLayout>
