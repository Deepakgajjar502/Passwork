<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/bottom_sheet_behavior"
    android:orientation="vertical"
  >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".Activity.WorkspaceLayout">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:theme="@style/ToolbarTheme"
        app:titleTextColor="@color/white"
        android:layout_gravity="top"
        app:layout_collapseMode="pin"
        app:titleTextAppearance="@style/Toolbar.TitleText"
        android:background="@color/colorPrimaryDark"
        android:elevation="5dp" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_alignParentLeft="true"
               android:backgroundTint="@color/white"
                app:tint="@color/white"
                android:id="@+id/backButton"
                android:src="@drawable/icon_back_vector"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_16sdp"
                android:id="@+id/floorDetail"
                android:layout_centerHorizontal="true"
                android:textColor="@color/white"
                android:text="Select Seat"/>


            <ImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
               android:layout_toRightOf="@id/floorDetail"
                android:backgroundTint="@color/white"
                app:tint="@color/white"
                android:id="@+id/downButton"
                android:src="@drawable/ic_arrow_drop_down_24"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:tint="@color/white"
                android:layout_alignParentRight="true"
                android:id="@+id/Calender"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_calendar"/>



        </RelativeLayout>



    </androidx.appcompat.widget.Toolbar>

    <noman.weekcalendar.WeekCalendar
        android:id="@+id/weekCalendar"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_below="@id/toolbar"
        app:weekTextColor="@color/white"
        app:daysBackgroundColor="@color/colorPrimary"
        app:daysTextColor="@color/white"
        app:selectedBgColor="@color/accent"
        app:todaysDateBgColor="@color/accent"
        app:weekBackgroundColor="@color/colorPrimary"
        android:background="@color/colorPrimary"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/weekCalendar"
        android:textSize="@dimen/_16sdp"
        android:visibility="visible"
        android:layout_marginTop="@dimen/_10sdp"
        android:textColor="@color/white"
        android:id="@+id/Title"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Title"
        android:textSize="@dimen/_12sdp"
        android:visibility="visible"
        android:layout_marginTop="@dimen/_2sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:textColor="@color/white"
        android:id="@+id/address"
        android:layout_centerHorizontal="true"
        />




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/address"
        android:textSize="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_2sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:textColor="@color/white"
        android:id="@+id/selectedDate"
        android:layout_centerHorizontal="true"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:id="@+id/FloorSeatDetail"
        android:orientation="horizontal"
        android:visibility="invisible"
        android:weightSum="3"
        android:layout_below="@id/selectedDate">

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            card_view:cardCornerRadius="10dp"
            android:layout_margin="@dimen/_3sdp"
            android:id="@+id/TotalSeat"
            android:layout_weight="1"
            android:padding="@dimen/_5sdp"
            card_view:cardBackgroundColor="@color/accent"
            card_view:cardElevation="5dp"
            card_view:cardMaxElevation="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_margin="@dimen/_3sdp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtTotalSeat"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="@dimen/_20sdp"
                    />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_12sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Total"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            card_view:cardCornerRadius="10dp"
            android:layout_margin="@dimen/_5sdp"
            android:id="@+id/OccupiedSeat"
            android:layout_weight="1"
            card_view:cardBackgroundColor="@color/accent"
            card_view:cardElevation="5dp"
            card_view:cardMaxElevation="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_margin="@dimen/_3sdp"
                android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtOccupiedSeat"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="@dimen/_20sdp"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_12sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Occupied"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>



        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            card_view:cardCornerRadius="10dp"
            android:layout_margin="@dimen/_5sdp"
            android:id="@+id/Avaialble"
            android:layout_weight="1"
            card_view:cardBackgroundColor="@color/accent"
            card_view:cardElevation="5dp"
            card_view:cardMaxElevation="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_margin="@dimen/_3sdp"
                android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtAvaialbleSeat"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="@dimen/_20sdp"
                />



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_12sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Available"/>

            </LinearLayout>


        </androidx.cardview.widget.CardView>






    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/layout_office"
        android:visibility="gone"
        android:adjustViewBounds="true"
        android:layout_below="@id/Title"
        android:id="@+id/officeLayout"/>



     <!--   <GridView
            android:numColumns="auto_fit"
              android:layout_above="@id/swipe_btn"
            android:gravity="center"
            android:columnWidth="@dimen/_50sdp"
            android:stretchMode="columnWidth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/grid"
            android:layout_below="@id/address"
            />-->
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/grid"
        android:layout_below="@id/FloorSeatDetail"

        />




    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:indeterminateTint="@color/white"
        android:layout_marginTop="@dimen/_50sdp"
        android:visibility="gone" />

</RelativeLayout>






</androidx.coordinatorlayout.widget.CoordinatorLayout>