<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/AppTheme"
    tools:context=".Activity.LoginActivity">

    <pl.droidsonroids.gif.GifImageView
        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        android:layout_height="match_parent"
        android:id="@+id/imageView"
        android:visibility="visible"
        android:background="@drawable/office_bg_login"
        android:foreground="@color/black_trans"
        />

    <ImageView
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_150sdp"
        android:adjustViewBounds="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_20sdp"
        android:src="@drawable/logo_login"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        >




    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:theme="@style/TextLabel">
        <EditText
            android:id="@+id/edt_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="-4dp"
            android:layout_marginEnd="-4dp"
            android:hint="@string/Lbl_email"
            android:text="atish@passwork.in"
            android:inputType="textEmailAddress"
            android:drawableStart="@drawable/ic_email"
            android:drawableTint="@color/white"
            android:paddingStart="@dimen/_10sdp"
            android:drawablePadding="@dimen/_10sdp"
            android:maxLength="50"
            android:maxLines="1"
            android:textSize="16sp"
            android:singleLine="true"
            android:textColor="#e6e6e6"
            android:theme="@style/DefaultEditText" />

    </com.google.android.material.textfield.TextInputLayout>



    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="@color/colorAccent"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:theme="@style/TextLabel">

        <EditText
            android:id="@+id/edt_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="-4dp"
            android:layout_marginEnd="-4dp"
            android:hint="@string/lbl_password"
            android:text="Atish@12"
            android:inputType="textPassword"
            android:drawableStart="@drawable/ic_padlock"
            android:drawablePadding="@dimen/_10sdp"
            android:drawableTint="@color/white"
            android:paddingStart="@dimen/_10sdp"
            android:maxLength="50"
            android:maxLines="1"
            android:textSize="16sp"
            android:singleLine="true"
            android:textColor="#e6e6e6"
            android:theme="@style/DefaultEditText" />

    </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_gravity="right"
            android:text="Forgot Password?"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:text="@string/lbl_login"
            android:textColor="@color/black"
            android:background="@drawable/sociallogin"
            android:padding="@dimen/_10sdp"
            android:textAllCaps="false"
            android:id="@+id/btnLogin"

            />


        <FrameLayout
            android:id="@+id/FrameLayout2"

            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="@dimen/_15sdp"
            >
            <Button
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:text="@string/Lbl_GooglePlus"
                android:background="@drawable/sociallogin"
                android:padding="@dimen/_10sdp"
                android:textAllCaps="false"
                android:id="@+id/imgGmail"
                android:drawableLeft="@drawable/ic_google"
                />


            <com.google.android.gms.common.SignInButton
                android:id="@+id/Googlelogin_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textAlignment="center"
                android:visibility="gone"
                android:layout_gravity="center_horizontal" />

        </FrameLayout>
    </LinearLayout>





    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:theme="@style/ProgressBar.White"
        android:visibility="gone" />






</RelativeLayout>