<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimaryDark"
    tools:context=".Fragment.Homefragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:layout_margin="@dimen/_10sdp"
        android:id="@+id/header"
        >


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_weight="1"

        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/UserName"
            android:textSize="@dimen/_13sdp"
            android:text="Hello, Deepak Gajjar"
            android:textColor="@color/white"
            android:theme="@style/Textview_bold"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_11sdp"
            android:fontFamily="@font/open_sans_regular"
            android:text="Welcome to Passwork"
            android:theme="@style/Textview_regular"
            android:textColor="@color/white"

            />
    </LinearLayout>

        <ImageView
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:id="@+id/Profile"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sheducl"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_below="@id/header"
        android:textSize="@dimen/_12sdp"
        android:gravity="center"
        android:theme="@style/Textview_bold"
        android:drawableRight="@drawable/ic_calendar"
        android:drawableTint="@color/white"
        android:textColor="@color/white"
        android:drawablePadding="@dimen/_10sdp"
        android:text="Upcoming Schedule"/>


    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sheducl"
        android:layout_margin="@dimen/_5sdp"
        android:scrollbars="vertical"
        android:id="@+id/ListofShedule"

        />



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/round"
        android:theme="@style/Textview_bold"
        android:textStyle="bold"
        android:textSize="@dimen/_18sdp"
        android:textColor="@color/white"
        android:layout_below="@id/ListofShedule"
        android:text="Services"/>


    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/ListWorkSpace"
        android:layout_below="@id/round"
        android:paddingStart="50dp"
        android:paddingEnd="50dp"
        android:visibility="visible"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/round"
        android:visibility="gone"
        android:orientation="vertical">


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:id="@+id/selectDate"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:theme="@style/TextLabel_select">


        <EditText
            android:id="@+id/edt_select_workspaceDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="-4dp"
            android:layout_marginEnd="-4dp"
            android:hint="Start Date - End Date"
            android:text="05-02-2021 / 10-02-2021"
            android:focusable="false"
            android:textColorHint="@color/white"
            android:drawableTint="@color/white"
            android:drawableStart="@drawable/ic_calendar"
            android:drawablePadding="@dimen/_10sdp"
            android:maxLength="50"
            android:textSize="@dimen/_12sdp"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/white"
            android:theme="@style/EditText" />

    </com.google.android.material.textfield.TextInputLayout>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_20sdp"
        android:layout_below="@id/round"
        android:padding="@dimen/_10sdp"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@color/colorAccent"
        app:cardElevation="5dp"
        app:cardMaxElevation="6dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/workspaceDetail"
                android:gravity="center"
                android:layout_below="@id/selectWorkspace"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:background="@color/accent"
                    android:gravity="center"
                    android:weightSum="3"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:textColor="@color/black"
                        android:theme="@style/Textview_bold"
                        android:gravity="center"
                        android:fontFamily="@font/open_scan_bold"
                        android:text="BUILDING"/>


                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:textColor="@color/black"
                        android:theme="@style/Textview_bold"
                        android:gravity="center"
                        android:text="FLOOR"/>





                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:textColor="@color/black"
                        android:theme="@style/Textview_bold"
                        android:gravity="center"
                        android:text="AVAILABLE"/>



                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:gravity="center"
                    android:weightSum="3"
                    android:id="@+id/workspace"
                    android:padding="@dimen/_5sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:textSize="@dimen/_10sdp"
                        android:textColor="@color/white"
                        android:theme="@style/Textview_regular"
                        android:gravity="center"
                        android:text="Work Wise Solution Pvt. Ltd."/>


                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:textColor="@color/white"
                        android:theme="@style/Textview_regular"
                        android:gravity="center"
                        android:text="1st Floor"/>



                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:textSize="@dimen/_10sdp"
                        android:theme="@style/Textview_regular"
                        android:textColor="@color/white"
                        android:drawablePadding="@dimen/_5sdp"
                        android:drawableRight="@drawable/ic_arrow"
                        android:drawableTint="@color/white"
                        android:gravity="center"
                        android:text="10/14"/>



                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:gravity="center"
                    android:weightSum="3"
                    android:padding="@dimen/_5sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:textSize="@dimen/_10sdp"
                        android:textColor="@color/black"
                        android:theme="@style/Textview_regular"
                        android:gravity="center"
                        android:text=" "/>


                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:textSize="@dimen/_10sdp"
                        android:textColor="@color/white"
                        android:theme="@style/Textview_regular"
                        android:gravity="center"
                        android:text="2nd Floor"/>





                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_10sdp"
                        android:theme="@style/Textview_regular"
                        android:drawableRight="@drawable/ic_arrow"
                        android:drawablePadding="@dimen/_5sdp"
                        android:drawableTint="@color/white"
                        android:gravity="center"
                        android:text="70/150"/>



                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"/>

            </LinearLayout>


        </LinearLayout>



    </androidx.cardview.widget.CardView>

    </LinearLayout>


    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_50sdp"
        android:visibility="gone" />

</RelativeLayout>