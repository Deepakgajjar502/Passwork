<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/_160sdp"
    android:layout_height="@dimen/_90sdp"

    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        card_view:cardCornerRadius="5dp"
        android:layout_margin="@dimen/_5sdp"

        card_view:cardBackgroundColor="@color/white"
        card_view:cardElevation="5dp"
        card_view:cardMaxElevation="5dp">





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
         android:layout_margin="@dimen/_7sdp"
            android:id="@+id/cardview"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp"
                card_view:cardCornerRadius="5dp"
                android:layout_gravity="center_vertical"

                card_view:cardBackgroundColor="@android:color/white"
             >

            <ImageView
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp"
                android:scaleType="centerCrop"
                android:src="@drawable/schedule_desk_image"
                android:id="@+id/icon_book"
                />
            </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"

            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/title"

                android:textSize="@dimen/_11sdp"
                android:textStyle="bold"
                android:marqueeRepeatLimit="marquee_forever"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:theme="@style/Textview_bold"
                android:textColor="@color/black"
                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_calendar_end"
                android:drawablePadding="@dimen/_5sdp"
                android:drawableTint="@color/gray"
                android:theme="@style/Textview_regular"
                android:id="@+id/dateShedule"
                android:textSize="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:textColor="@color/gray"
                android:gravity="center_vertical"
                android:text="25-01-2021"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/type"
                android:textSize="@dimen/_10sdp"
                android:theme="@style/Textview_regular"
                android:layout_marginTop="@dimen/_3sdp"
                android:textColor="@color/gray"
                />






        </LinearLayout>

        </LinearLayout>


        </LinearLayout>



    </androidx.cardview.widget.CardView>


</RelativeLayout>