<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="10dp"
        android:layout_margin="@dimen/_10sdp"
        android:id="@+id/cardview"
        card_view:cardBackgroundColor="@color/accent"
        card_view:cardElevation="5dp"
        card_view:cardMaxElevation="6dp">





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
         android:layout_margin="@dimen/_5sdp"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/_5sdp"
                android:theme="@style/Textview_regular"
                android:id="@+id/dateShedule"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                android:text="25-01-2021"
                />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           android:weightSum="4"
            android:layout_marginTop="@dimen/_5sdp"

            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/_2sdp"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_desk"
                />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_weight="3"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/title"
                android:layout_marginTop="@dimen/_5sdp"
                android:textSize="@dimen/_11sdp"
                android:textStyle="bold"
                android:marqueeRepeatLimit="marquee_forever"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:theme="@style/Textview_bold"
                android:textColor="@color/black"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/type"
                android:textSize="@dimen/_10sdp"
                android:theme="@style/Textview_regular"
                android:layout_marginTop="@dimen/_3sdp"
                android:textColor="@color/black"
                />






        </LinearLayout>

        </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/_5sdp"
                android:theme="@style/Textview_regular"
                android:layout_marginTop="@dimen/_5sdp"
                android:id="@+id/BookingNumber"
                android:textSize="@dimen/_7sdp"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                android:text="25-01-2021"
                />
        </LinearLayout>



    </androidx.cardview.widget.CardView>


</LinearLayout>