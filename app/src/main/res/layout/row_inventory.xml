        android:id="@+id/line"

        android:background="@color/gnt_test_background_color"/>-->

    <LinearLayout
        android:id="@+id/lin_general_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:weightSum="10"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            card_view:cardCornerRadius="5dp"
            android:layout_margin="@dimen/_5sdp"
            android:layout_gravity="center"
            card_view:cardBackgroundColor="@android:color/white"
            >

            <ImageView
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:scaleType="centerCrop"
                android:src="@drawable/inventory_image"
                android:id="@+id/icon_book"
                />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="9"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_bay_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/TextLabel_select"
                android:textSize="@dimen/_13sdp"
                android:layout_margin="@dimen/_5sdp"
                android:textColor="@color/colorAccent"

                />

            <TextView
                android:id="@+id/tv_floor_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:textSize="@dimen/_8sdp"
               android:textColor="@color/light_gray"
                />

            <TextView
                android:id="@+id/tv_availalbe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:textSize="@dimen/_8sdp"
                android:textColor="@color/light_gray"
                />
        </LinearLayout>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/imageView"
            android:layout_gravity="center"
            android:src="@drawable/ic_arrow"
            app:tint="@color/black" />



    </LinearLayout>



</RelativeLayout>