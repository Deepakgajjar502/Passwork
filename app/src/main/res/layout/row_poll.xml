<?xml version="1.0" encoding="utf-8"?>
<LinearLayout app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/tools">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="20dp"
        android:layout_margin="@dimen/_5sdp"
        android:id="@+id/cardview"
        card_view:cardElevation="10dp"
        card_view:cardMaxElevation="10dp">



    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

        android:padding="@dimen/_5sdp"
            android:orientation="vertical">



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_15sdp"
        android:textColor="@color/black"
        android:id="@+id/txtQust"
        android:textStyle="bold"
        android:text="What are the best place to visit in Austria?"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_select"
        android:textSize="@dimen/_7sdp"
        android:layout_margin="@dimen/_2sdp"
        android:drawablePadding="@dimen/_5sdp"
        android:id="@+id/txtmultiSelect"
        android:layout_gravity="end"
        android:text="Multi Select"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp"
            android:id="@+id/rec_anw"
            />






        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/votes"
            android:text="18 Votes"
            android:textSize="@dimen/_7sdp"
            android:layout_margin="@dimen/_5sdp"
            android:layout_gravity="end"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SUBMIT"
            android:id="@+id/btnSubmit"
            android:gravity="center"
            android:paddingStart="@dimen/_20sdp"
            android:paddingEnd="@dimen/_20sdp"
            android:layout_gravity="center"
            android:background="@drawable/bg_book_btn"
            android:layout_margin="@dimen/_20sdp"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>




